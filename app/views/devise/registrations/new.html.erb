<div class="wrapper_with_padding">
  <h2>Sign up</h2>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "reg_e_width" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "reg_p_width" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "reg_p_width_c" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign up", class: "button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>